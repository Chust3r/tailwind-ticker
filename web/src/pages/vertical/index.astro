---
import Layout from '../../layouts/Layout.astro'
import Codeblock from '../../components/codeblock/codeblock.astro'
import TickerVertical from '../../components/ticker/ticker-vertical.astro'

const code = `<div class='ticker-y ticker-mask-y *:hover:animate-pause'>
	<div
		class='ticker-wrapper animate-ticker-top'
	>
		{...}
	</div>
</div>
`
---

<Layout title='Vertical'>
	<div class='flex flex-col mx-auto gap-2 mt-5 w-full items-center'>
		<h2 class='text-slate-50/50 font-medium'>Structure</h2>
		<Codeblock code={code} lang='html' class='w-fit' />
	</div>
	<TickerVertical />
</Layout>
